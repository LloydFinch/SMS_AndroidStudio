<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
    android:paddingTop="@dimen/dimen_1080_10dp"
    android:paddingBottom="@dimen/dimen_1080_10dp"
    android:paddingLeft="@dimen/dimen_1080_20dp"
    android:paddingRight="@dimen/dimen_1080_15dp"
    >
    
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    >
	    <TextView 
	       	android:id="@+id/tv_version_code"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textStyle="bold"
	        />
	     <TextView 
	       	android:id="@+id/tv_version_date"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	        />
	    
	</LinearLayout>

	<RadioButton 
	    android:id="@+id/radio_select_version"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    />
</LinearLayout>
