<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/popLayout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="bottom"
              android:background="#50000000"
              android:gravity="bottom"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_shape"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/date_range"
            android:textColor="@color/delta_black"
            android:textSize="@dimen/select_network_textsize_18sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dialog_event_log_oderby_padding_16dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/layoutToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/imgToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_duihao"
                        android:visibility="visible"
                        />

                    <TextView
                        android:id="@+id/txToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dialog_event_log_oderby_padding_8dp"
                        android:text="@string/today"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_delta"
                    />

                <LinearLayout
                    android:id="@+id/layout7days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/img7days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_duihao"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/tx7days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dialog_event_log_oderby_padding_8dp"
                        android:text="@string/last_7_days"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_delta"
                    />

                <LinearLayout
                    android:id="@+id/layout30days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/img30days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_duihao"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/tx30days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dialog_event_log_oderby_padding_8dp"
                        android:text="@string/last_30_days"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_delta"
                    />

                <LinearLayout
                    android:id="@+id/layoutAlltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/imgAlltime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_duihao"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/txAllTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dialog_event_log_oderby_padding_8dp"
                        android:text="@string/all_time"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_delta"
                    />

                <LinearLayout
                    android:id="@+id/layoutCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/imgCustom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_duihao"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/txCustomRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dialog_event_log_oderby_padding_8dp"
                        android:text="@string/custom_range"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dialog_event_log_oderby_padding_40dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dialog_event_log_oderby_padding_8dp"
                    >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/layoutFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/dialog_event_log_oderby_padding_8dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dialog_event_log_oderby_padding_8dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/from"
                            />

                        <TextView
                            android:id="@+id/txFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/_date_range"
                            />

                        <ImageView
                            android:id="@+id/imgFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dialog_event_log_oderby_padding_8dp"
                            android:src="@drawable/ic_calendar"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dialog_event_log_oderby_padding_8dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dialog_event_log_oderby_padding_8dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/to"
                            />

                        <TextView
                            android:id="@+id/txTo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/_date_range"
                            />

                        <ImageView
                            android:id="@+id/imgTo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dialog_event_log_oderby_padding_8dp"
                            android:src="@drawable/ic_calendar"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/dialog_event_log_oderby_padding_8dp"
            android:text="@string/_ok"
            android:textColor="@color/blue_delta"
            />
    </LinearLayout>
</LinearLayout>
