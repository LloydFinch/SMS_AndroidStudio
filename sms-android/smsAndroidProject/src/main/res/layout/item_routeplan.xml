<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.delta.smsandroidproject"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    app:cardCornerRadius="@dimen/dimen_1080_5dp"
    app:cardElevation="@dimen/dimen_1080_5dp"
    app:cardBackgroundColor="@color/route_card_back"
    android:layout_marginBottom="@dimen/dimen_1080_8dp"
    android:layout_marginTop="@dimen/dimen_1080_8dp"
   >
   
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/route_card_back"
        >
         <LinearLayout 
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:orientation="horizontal"
         >
	        <TextView
				style="@style/routepaln_tv_tag"
				android:text = "@string/route_tv_distance"        
	            />
	        <TextView
	            android:id="@+id/route_tv_distance"
	            style="@style/routepaln_tv"
	            />
        </LinearLayout>
        
         <LinearLayout 
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:orientation="horizontal"
         >
	        <TextView
	             android:id="@+id/route_tv_fare_tag"
				style="@style/routepaln_tv_tag"
				android:text = "@string/route_tv_fare"     
	            />
	        <TextView
	            android:id="@+id/route_tv_fare"
	            style="@style/routepaln_tv"
	            />
        </LinearLayout>
        
          <TextView
				style="@style/routepaln_tv_tag"
				android:text = "@string/route_tv_visit"     
	            />
          
           <TextView
	            android:id="@+id/route_tv_visit"
	            style="@style/routepaln_tv"
	            android:paddingLeft="10dp"
	            android:gravity="left"
	            />
         
           <LinearLayout 
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:orientation="horizontal"
         >
	        <TextView
	            android:id="@+id/route_tv_copyrights_tag"
				style="@style/routepaln_tv_tag"
				android:text = "@string/route_tv_copyrights"     
	            />
	        <TextView
	            android:id="@+id/route_tv_copyright"
	            style="@style/routepaln_tv"
	            />
        </LinearLayout>
        
           <LinearLayout 
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:orientation="horizontal"
	       android:layout_marginBottom="@dimen/dimen_1080_5dp"
         >
	        <TextView
	            android:id="@+id/route_tv_warn_tag"
				style="@style/routepaln_tv_tag"
				android:text = "@string/route_tv_warn"     
	            />
	        <TextView
	            android:id="@+id/route_tv_warn"
	            style="@style/routepaln_tv"
	            />
        </LinearLayout>
           
        <Button 
	        android:id="@+id/button_start_navigation"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_navi"
	        android:padding="@dimen/dimen_1080_5dp"
	        android:gravity="center"
	        android:background="@drawable/round_bottom_back"
	        android:layout_marginTop="@dimen/dimen_1080_5dp"
	        android:textColor="@android:color/white"
	        android:textAllCaps="false"
	        android:visibility="gone"
        />
    </LinearLayout>
    
</android.support.v7.widget.CardView>
